{
  "tests": [
    {
      "name": "Get stats for specific article",
      "method": "GET",
      "path": "/?article_id=1",
      "expectedStatus": 200,
      "expectedBody": {
        "article_id": "number",
        "views_count": "number",
        "shares": "object"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Increment view count",
      "method": "POST",
      "path": "/",
      "body": {
        "article_id": 1,
        "action": "view"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "views_count": "number"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Track share event",
      "method": "POST",
      "path": "/",
      "body": {
        "article_id": 1,
        "action": "share",
        "platform": "telegram"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "shares_total": "number"
      },
      "bodyMatcher": "partial"
    }
  ]
}
